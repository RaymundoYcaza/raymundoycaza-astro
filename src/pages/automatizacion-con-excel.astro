---
import { getCollection } from "astro:content";
import { Picture } from "@astrojs/image/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import cover1 from "/src/assets/images/que-es-la-automatizacion-con-excel_portada.png";
import cover2 from "/src/assets/images/automatizar-con-excel_portada.png";
import cover3 from "/src/assets/images/analisis-de-datos_portada.png";
import cover4 from "/src/assets/images/2023/guia-de-formulas-en-excel_portada.png";
import cover5 from "/src/assets/images/2023/guia-de-graficos-en-excel_portada.png";
import cover6 from "/src/assets/images/2023/herramientas-en-excel_portada.png";
import cover7 from "/src/assets/images/2023/macros-en-excel_portada.png";

// Filter blog entries with 'draft: false' & date before current date
const publishedBlogEntries = await getCollection("blog", ({ data }) => {
  return !data.draft && data.publishDate < new Date() && data.domainGroup == "automatizacion-con-excel" && !data.cluster;
});

// Sort content entries by publication date
publishedBlogEntries.sort(function (a, b) {
  return b.data.publishDate.valueOf() - a.data.publishDate.valueOf();
});

// Limit to the 3 most recent blog entries
const recentBlogEntries = publishedBlogEntries.slice(0, 3);
---

<Layout title="Automatización con Excel">
  <section id="featured" class="mt-16 max-w-4xl mx-auto">
    <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1 ">
      Automatización con Excel
    </h2>
    <p>
      Si quieres descubrir cómo automatizar procesos complejos y crear informes precisos de manera rápida y sencilla, este es el lugar perfecto para ti.
    </p>
    <div class="flex flex-wrap my-12">
      <div class="w-full sm:w-1/2 my-6 px-6">
        <span class="bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Principiante</span>
        <Picture
        src={cover1.src}
        alt="Descubre qué es la automatización con Excel"
        sizes="(max-width: 800px) 100vw, 800px"
        widths={[200, 400, 800]}
        aspectRatio="16:9"
        background="#ffffff"
        fit="cover"
        position="center"
        loading="lazy"
        decoding="async"
        class="object-cover md:h-auto md:w-full h-auto w-full mt-0 mb-0 rounded-md rounded-b-none"
      />
        <a href="/blog/automatizacion-con-excel/que-es-la-automatizacion-con-excel" class="text-blue-700 hover:text-orange-500 hover:underline">
          <h4 class="text-xl mt-4">
            ¿Qué es la automatización con Excel? Comencemos desde el principio »
